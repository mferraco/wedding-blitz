<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/event_cardview_margin"
    android:padding="@dimen/event_cardview_padding"
    app:cardCornerRadius="@dimen/event_cardview_corner_radius">

    <LinearLayout
        android:id="@+id/event_cardview_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_title_textview"
            style="@style/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_schedule_title" />

    </LinearLayout>

</android.support.v7.widget.CardView>