<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/reception_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_reception_image"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_scrim" />

        <TextView
            android:id="@+id/reception_name_textview"
            style="@style/Heading.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/reception_image"
            android:gravity="center_horizontal"
            android:padding="20dp" />

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.google.android.gms.maps.MapView
            android:id="@+id/reception_google_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/reception_navigation_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"
            android:contentDescription="@string/fab_content_description"
            android:elevation="@dimen/fab_elevation"
            android:src="@drawable/navigation"
            android:tint="@android:color/white"
            app:fabSize="normal"
            app:pressedTranslationZ="@dimen/fab_press_translation_z" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>